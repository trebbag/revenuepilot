{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noEmit": false,
    "stripInternal": true
  },
  "include": [
    "src/index.ts",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/utils/**/*.ts",
    "src/utils/**/*.tsx",
    "src/styles/**/*.ts"
  ],
  "exclude": [
    "src/App.tsx",
    "src/main.tsx",
    "dist",
    "node_modules"
  ]
}
